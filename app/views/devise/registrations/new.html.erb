
<div class="AccountFormWrapper">
  <div class="AccountFormContainer">
    <h2 class="AccountFormTitle">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :name, "ユーザー名【必須】", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder:"ユーザー名を入力" %>
      </div>

      <div class="form-group">
        <%= f.label :email,"メールアドレス【必須】", class: "form-label" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレスを入力" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード【必須】", class: "form-label" %><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワードを入力" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード【必須】", class: "form-label" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"確認用パスワードを入力" %>
      </div>

      <%= f.submit "新しくアカウントを作成", class: "btn btn-danger", style: "background-color:#ff7757" %><br>
      <%= link_to "アカウントをお持ちの場合はログイン", new_user_session_path, class:"btn btn-outline-secondary" %>
    <% end %>  
    </div>
  </div>
  <%= render "layouts/shared/footer" %>
