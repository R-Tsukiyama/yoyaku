<header>
  <nav class="navbar Navbar">
    <div class="container-fluid">
      <%= link_to home_index_path do %>
        <%= image_tag 'logo.png', alt:"サイトロゴ", class:"navbar-logo" %>
      <% end %> 
      <div class="dropdown">
        <a class="d-flex align-items-center NavProfile dropdown-toggle" href="#" id="dropdown-button" data-bs-toggle="dropdown" aria-expanded="false">
          <div class="userinformation">
            <% if current_user.image? %>
              <%= image_tag current_user.image.url, class: "rounded-circle", size: '60x60' %>
            <% else %>
              <%= image_tag ("defaultAvatar.png"), class: "rounded-circle", size: '60x60' %>
            <% end %>
            <span class="username"><%= current_user.name %></span>
          </div> 
        </a>   
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <li class="dropdown-item"><%= link_to "施設を新規登録", new_room_path %></li>
          <hr class="dropdown-hr">
          <li class="dropdown-item"><%= link_to "予約済み一覧", reservations_path %></li>
          <li class="dropdown-item middle"><%= link_to "登録済み一覧", rooms_path %></li>
          <li class="dropdown-item"><%= link_to "アカウント編集", users_show_path %></li>
          <hr class="dropdown-hr">
          <li class="dropdown-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>  
    </div>
  </nav>
</header>
